[branch]
    autosetuprebase = always

[color]
    ui = auto

[merge]
    ff = false

[log]
        decorate = full

[push]
        default = current

[core]
        pager = cat
        excludesfile = ~/.gitignore

[alias]
    ci = commit --verbose
    st = status
    fst = !git fetch && git status
    co = checkout
    br = branch
    df = diff
    commit = commit --verbose
    amend = commit --verbose --amend --all
    lg = log --oneline 
    ls = ls-files
